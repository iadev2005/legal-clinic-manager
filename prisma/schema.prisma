// 1. Generador del cliente (El motor de Prisma)
generator client {
  provider = "prisma-client-js"
}

// 2. La conexi√≥n a la Base de Datos (Tal cual te lo da Neon)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 3. Tus Modelos (Tus tablas)
model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  authorId  Int
  author    User    @relation(fields: [authorId], references: [id])
}
// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modelo de Usuario
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  password  String
  role      UserRole @default(STUDENT)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  cases     Case[]
  tasks     Task[]
  activities Activity[]
}

enum UserRole {
  STUDENT
  PROFESSOR
  ADMIN
}

// Modelo de Solicitante
model Applicant {
  id          String   @id @default(cuid())
  name        String
  email       String?
  phone       String?
  address     String?
  idDocument  String   @unique
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  cases Case[]
}

// Modelo de Caso
model Case {
  id            String     @id @default(cuid())
  caseNumber    String     @unique
  title         String
  description   String?
  status        CaseStatus @default(EN_PROCESO)
  priority      Priority   @default(MEDIA)
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  closedAt      DateTime?

  applicantId   String
  applicant     Applicant  @relation(fields: [applicantId], references: [id])
  
  assignedToId  String?
  assignedTo    User?      @relation(fields: [assignedToId], references: [id])

  tasks         Task[]
  citations     Citation[]
  documents     Document[]
  activities    Activity[]
}

enum CaseStatus {
  EN_PROCESO
  ARCHIVADO
  ENTREGADO
  ASESORIA
}

enum Priority {
  BAJA
  MEDIA
  ALTA
}

// Modelo de Tarea
model Task {
  id          String       @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime
  status      TaskStatus   @default(PENDING)
  priority    Priority     @default(MEDIA)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  caseId      String
  case        Case         @relation(fields: [caseId], references: [id])
  
  assignedToId String?
  assignedTo   User?       @relation(fields: [assignedToId], references: [id])
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}

// Modelo de Citaci√≥n
model Citation {
  id          String   @id @default(cuid())
  date        DateTime
  location    String
  description String?
  status      String   @default("Pendiente")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  caseId      String
  case        Case     @relation(fields: [caseId], references: [id])
}

// Modelo de Documento
model Document {
  id          String   @id @default(cuid())
  name        String
  type        String
  url         String
  uploadedAt  DateTime @default(now())

  caseId      String
  case        Case     @relation(fields: [caseId], references: [id])
}

// Modelo de Actividad (Log de acciones)
model Activity {
  id          String   @id @default(cuid())
  action      String
  description String?
  createdAt   DateTime @default(now())

  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  caseId      String?
  case        Case?    @relation(fields: [caseId], references: [id])
}
